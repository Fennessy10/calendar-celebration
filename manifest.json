{
  "manifest_version": 3,
  "name": "Calendar Level Up",
  "version": "2.1",
  "description": "Adds a level-up progress bar to Google Calendar.",
  "permissions": [
    "storage"
  ],
  "content_scripts": [
    {
      "matches": ["https://calendar.google.com/*"],
      "js": ["assets/confetti.js", "content.js"]
    }
  ],
  "web_accessible_resources": [
    {
      "resources": [
        "assets/success.mp3",
        "assets/level_up.mp3"
      ],
      "matches": ["https://calendar.google.com/*"]
    }
  ]
}